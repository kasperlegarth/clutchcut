{
  "extends": "@tsconfig/vue/tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "useDefineForClassFields": true,
    "strict": true,
    "jsx": "preserve",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/renderer/*"]
    },
    "types": ["vite/client"]
  },
  "include": ["src/renderer/**/*", "env.d.ts"],
  "exclude": ["node_modules", "dist", "dist-electron"]
}
